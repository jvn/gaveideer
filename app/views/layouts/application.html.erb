<!DOCTYPE html>
<html>
    <head>
      <title>Gaveideer</title>
      <%= stylesheet_link_tag    "application" %>
      <%= javascript_include_tag "application" %>
      <%= csrf_meta_tags %>
    </head>
    <body style="padding-top: 40px;">

        <% flash.each do |name, msg| %>
            <%= content_tag :div, msg, :id => "flash#{name}" %>
        <% end %>


        <div style="z-index: 5;" class="topbar-wrapper">
            <div data-dropdown="dropdown" class="topbar">
              <div class="topbar-inner">
                <div class="container">
                  <h3><%= link_to "Profil", @bruger %></h3>
                  <ul class="nav">


                    <li><%#= link_to 'Dine begivenheder', begivenheds_path(:ven_id => @bruger.id) %></li>
                    <li><%#= link_to 'Venner', brugers_path %></li>
                    <li><%#= link_to "ny begivenhed", new_begivenhed_path %></li>


                  </ul>
                  <ul class="nav secondary-nav">
                    <li class="active"><%= link_to "log ud", :controller => "pages", :action => "logud" %></li>
                  </ul>
                </div>
              </div><!-- /topbar-inner -->
            </div><!-- /topbar -->
        </div>
        <%= yield %>

    </body>
</html>
